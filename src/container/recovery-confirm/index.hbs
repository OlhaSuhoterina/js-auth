{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page-background">
    <header>
        {{> back-button}}
    </header>
    <form class="page-section">
        <h1 class="page-title">Відновлення паролю</h1>

        <div class="form">
            <div class="form-item">
                {{> field action="recoveryConfirmForm.change" label=" Ваш код" type="number" name="code"
                placeholder="Ваш код"}}
                <span name="code" class="form-error">ПОМИЛКА</span>
            </div>
            <div class="form-item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль" type="password"
                name="password"
                placeholder="Ваш пароль"}}
                <span name="password" class="form-error">ПОМИЛКА</span>
            </div>
            <div class="form-item">
                {{> field-password action="recoveryConfirmForm.change" label="Новій пароль ще раз" type="password"
                name="passwordAgain"
                placeholder="Ваш пароль"}}
                <span name="passwordAgain" class="form-error">ПОМИЛКА</span>
            </div>




        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button-disabled" type="button">Змінити
            пароль</button>

        <span class="alert alert-disabled ">Увага, помилка!</span>
    </form>
</div>
